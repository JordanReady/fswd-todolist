<%= javascript_pack_tag 'index', 'data-turbolinks-track': 'reload' %>

<div class="container d-flex justify-content-center">
  <div class="row">
    <div class="col-12 d-inline-flex justify-content-center">
      <h1 class=" mt-4 px-3 text-primary text-center fw-bold border rounded shadow">To Do List</h1>
    </div>
    <div class='col-12'>
      <div class='row' id='tasks'></div>

      <div class='d-flex flex-row justify-content-center'>
        <form class='float-right mt-1 text-primary text-center fw-bold rounded shadow' id="create-task">
          <input class='py-1' id="new-task-content" type="text" placeholder="Create a new task" required/>
          <button class="btn btn-outline-primary btn-md py-1.5 px-3 fw-bold"> Add </button>
        </form>
      </div>

    </div>
  </div>
</div>
